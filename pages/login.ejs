<body>

  <!-- 头部信息 -->
  <header class="w">
    <img src="../static/images/top-login-logo.png" alt="">
    <img src="../static/images/login-word.png" alt="">
    <p class="welcom-words">来天涯，与141978062位天涯人共同演绎你的网络人生</p>
  </header>
  <!-- 中间的登录板块 -->
  <section class="middle">
    <!-- 版心模块 -->
    <section class="w">
      <!-- 左边的图片 -->
      <img src="../static/images/bg_earth.jpg" alt="" class="bg">
      <!-- 右边的登录信息 -->
      <div class="login">
        <span class="words">二维码登录更便捷</span>
        <span class="img"></span>
        <!-- 登录信息上半部分-form信息 -->
        <div class="login-info">
          <form action="/api/login" method="post">
            <input type="text" name="name" id="" placeholder="用户名/手机/邮箱">
            <input type="password" name="password" id="" placeholder="密码">
            <div class="login-info-check">
              <label for="autologin">
                <input type="checkbox" name="autologin" id="autologin" checked="checked">下次自动登录
              </label>
              <a href="javascripte:;">忘记密码？</a>
            </div>
            <button>登录</button>
          </form>
          <div class="login-info-register">
            <a href="#">立即注册</a>
          </div>
        </div>
        <!-- 登录信息中间部分-其他账号登录切换 -->
        <div class="switch-info">
          <div>
            <span>其他帐号登录：</span>
            <ul>
              <li><a href="#"></a></li>
              <li><a href="#"></a></li>
              <li><a href="#"></a></li>
            </ul>
          </div>
        </div>
        <!-- 登录信息下半部分-其他信息 -->
        <div class="online-info">
          <span class="online-num">当前在线人数：</span>
          <span class="safari">浏览进入>></span>
        </div>
      </div>
    </section>
  </section>

  <!-- 底部信息 -->
  <footer>
    <div class="w">
